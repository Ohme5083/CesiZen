@model CesiZen.Data.Models.UserModel

@{
    ViewData["Title"] = "Mon compte";
}

<h2 class="mb-4">Mon compte</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="card shadow-sm border-0">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4">Prénom :</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>

            <dt class="col-sm-4">Nom :</dt>
            <dd class="col-sm-8">@Model.LastName</dd>

            <dt class="col-sm-4">Nom d'utilisateur :</dt>
            <dd class="col-sm-8">@Model.UserName</dd>

            <dt class="col-sm-4">Email :</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Actif :</dt>
            <dd class="col-sm-8">
                <span class="badge bg-@(Model.Active ? "success" : "danger")">
                    @(Model.Active ? "Oui" : "Non")
                </span>
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="EditProfile" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Modifier mes informations
    </a>
</div>
