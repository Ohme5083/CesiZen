@model CesiZen.Data.Models.InformationModel

@{
    ViewData["Title"] = "Détails de l'information";
}

<div class="container mt-4">
    <h1 class="h3 mb-3">Détails de l'information</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Texte)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Texte)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Date)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Modifier
        </a>
    </div>
</div>
