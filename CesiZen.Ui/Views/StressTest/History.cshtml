@model List<CesiZen.Data.Models.StressTestResultModel>

@{
    ViewData["Title"] = "Mes anciens résultats";
}

<h2 class="mb-4">Mes anciens résultats aux tests de stress</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Titre</th>
                <th>Date</th>
                <th>Score total</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.Title</td>
                    <td>@result.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>@result.TotalScore</td>
                    <td>@result.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted fst-italic">Aucun résultat disponible.</p>
}

<a asp-controller="StressTest" asp-action="Index" class="btn btn-primary mt-3">
    <i class="bi bi-arrow-left"></i> Refaire un test
</a>
