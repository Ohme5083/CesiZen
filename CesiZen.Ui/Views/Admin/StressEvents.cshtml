@model IEnumerable<CesiZen.Data.Models.StressEventModel>

@{
    ViewData["Title"] = "IndexStress";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="CreateEvent" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle me-1"></i> Créer un nouvel événement
</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Date</th>
            <th>Nombre de questions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Title</td>
                <td>@evt.Description</td>
                <td>@(evt.Date?.ToString("dd/MM/yyyy") ?? "-")</td>
                <td>@(evt.StressQuestions?.Count ?? 0)</td>
                <td>
                    <a asp-action="EditEvent" asp-route-id="@evt.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil-square"></i> Modifier
                    </a>
                    <a asp-action="DeleteEvent" asp-route-id="@evt.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Voulez-vous vraiment supprimer cet événement ?');">
                        <i class="bi bi-trash"></i> Supprimer
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
