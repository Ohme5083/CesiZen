@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole<int>>

@{
    ViewData["Title"] = "Gestion des rôles";
}

<h2 class="mb-4">🔐 Gestion des rôles</h2>

<div class="mb-4">
    <form asp-action="CreateRole" method="post" class="d-flex gap-2">
        <input type="text" name="roleName" class="form-control" placeholder="Nom du rôle" required />
        <button type="submit" class="btn btn-primary">Créer le rôle</button>
    </form>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Nom Normalisé</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>@role.NormalizedName</td>
            </tr>
        }
    </tbody>
</table>
